<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="view_epicor_import_filter" model="ir.ui.view">
            <field name="name">epicor.import.select</field>
            <field name="model">epicor.import</field>
            <field name="arch" type="xml">
                <search string="import" version="7.0">
                    <group string="By Attribute">
                    </group>
                    <group string="By object">
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_epicor_import_form" model="ir.ui.view">
            <field name="name">epicor.import.form</field>
            <field name="model">epicor.import</field>
            <field name="arch" type="xml">
                <form string="import" version="7.0">
                    <header>
                        <button name="sgn_execute"
                            states="draft"
                            string="execute"
                            />
                        <button name="sgn_done"
                            states="running"
                            string="done"
                            />
                        <button name="sgn_error"
                            states="running"
                            string="error"
                            />
                        <field name="state" widget="statusbar"
                            statusbar_colors='{}'
                            />
                    </header>
                    <sheet string="import">
                     <group>
                     </group>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_epicor_import_tree" model="ir.ui.view">
            <field name="name">epicor.import.tree</field>
            <field name="model">epicor.import</field>
            <field name="arch" type="xml">
                <tree string="import"
                    colors="grey:state=='cancelled';blue:state in ('draft',);black:state in ('running',); red:state in ()"
                    >
                    <field name="state" />
                </tree>
            </field>
        </record>

    </data>
</openerp>
